<!DOCTYPE html>
<html lang="en">
  <head>
    <style type="text/css">
      body {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 14px;
        /* height:297mm; */
        /* width:210mm; */
        margin-left: auto;
        margin-right: auto;
      }
      .address {
        display: grid;
        place-items: center;
      }
      .singleSkill {
        display: inline-block;
        padding: 8px 16px;
        margin: 4px;
        border-radius: 20px;
        background-color: <%=accentColor || " #ff0055 " %>;
      }
      .block {
        /* margin-top: 10px; */
        margin-bottom: 24px;
      }
      .headers {
        margin-bottom: 8px;
        color: <%=accentColor || "#ff0055" %>;
      }
    </style>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link rel="stylesheet" href="./resume1.css"> -->
    <title>Document</title>
  </head>
  <body>
    <div style="margin-left: 15mm; margin-right: 15mm">
      <!-- About Section -->
      <div class="address">
        <% if (about.name) { %>
        <h1 class="headers"><%= about.name %></h1>
        <% } %> <% if (about.fullAddress) { %>
        <div style="margin-bottom: 3px"><%= about.fullAddress %></div>
        <% } %> <% if (about.cityZip) { %>
        <div style="margin-bottom: 3px"><%= about.cityZip %></div>
        <% } %> <% if (about.phNo) { %>
        <div style="margin-bottom: 3px">Ph no. <%= about.phNo %></div>
        <% } %> <% if (about.emails.length>0) { %>
        <div style="margin-bottom: 3px">
          <% about.emails.forEach(single_email => { %> &nbsp;<%= single_email
          %>&nbsp; <% }) %>
        </div>
        <% } %>
      </div>

      <!-- Education Area -->
      <% if (educations.length>0) { %>
      <div class="block">
        <h2 class="headers">EDUCATION:</h2>
        <ul>
          <% for( let i = 0; i < educations.length; i++ ) { %>
          <li style="margin-bottom: 14px">
            <div style="font-size: 20px; font-weight: 700; margin-bottom: 5px">
              <%= educations[i].courseName %>
            </div>
            <div>
              <span>
                <%= educations[i].organizationName %>, <%=
                educations[i].courseResults %>
              </span>
            </div>
          </li>
          <% } %>
        </ul>
      </div>
      <% } %>

      <!-- Skills Area -->
      <% if (skills.length>0) { %>
      <div class="block">
        <h2 class="headers">SKILLS:</h2>
        <div style="margin-top: 16px">
          <% skills.forEach(eachSkill => { %>
          <div class="singleSkill"><%= eachSkill %></div>
          <% }) %>
        </div>
      </div>
      <% } %>

      <!-- Works Area -->
      <% if (works.length>0) { %>
      <div class="block">
        <h2 class="headers">WORK EXPERIENCE:</h2>
        <% for( let i = 0; i < works.length; i++ ) { %>
        <h3 style="margin-left: 8px; margin-bottom: 8px; margin-top: 8px">
          <%= works[i].organizationName %>
        </h3>
        <% works[i].workDetails.forEach(eachAbout => { %>
        <div style="margin-bottom: 4px; margin-left: 16px">
          &#9679; <%= eachAbout %>
        </div>
        <% }) %> <% } %>
      </div>
      <% } %>

      <!-- Projects Area -->
      <% if (projects.length>0) { %>
      <div class="block">
        <h2 class="headers">PROJECTS:</h2>
        <% for( let i = 0; i < projects.length; i++ ) { %>
        <h3 style="margin-left: 8px; margin-bottom: 8px; margin-top: 8px">
          <%= projects[i].name %>
        </h3>
        <div style="margin-bottom: 4px; margin-left: 16px">
          <%= projects[i].details %>
        </div>
        <% } %>
      </div>
      <% } %>

      <!-- Other Skills and Activities Area -->
      <% if (others.length>0) { %>
      <div class="block">
        <h2 class="headers">Other Skills & Activities:</h2>
        <ul>
          <% for( let i = 0; i < others.length; i++ ) { %>
          <li>
            <div><%= others[i] %></div>
          </li>
          <% } %>
        </ul>
      </div>
      <% } %>
    </div>
  </body>
</html>
